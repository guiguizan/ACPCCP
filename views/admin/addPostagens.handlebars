<div class="card">
    <div class="card-body">

        <h4>Nova Postagens</h4>
        <form action="/admin/postagens/nova" method="POST" enctype="multipart/form-data">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">slug</label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" class="form-control"></textarea>


            <label for="Preço">Preço</label>
            <input type="text" name="preco" class="form-control">

            <label for="Preço">Peso</label>
            <input type="text" name="peso" class="form-control">


            <label for="Preço">Formato</label>
            <input type="text" name="formato" class="form-control">

            <label for="Preço">Comprimento</label>
            <input type="text" name="comprimento" class="form-control">


            <label for="Preço">altura</label>
            <input type="text" name="altura" class="form-control">


            <label for="Preço">Largura</label>
            <input type="text" name="largura" class="form-control">



            <label for="Preço">Diametro</label>
            <input type="text" name="diametro" class="form-control">



        



            <label for="categoria"></label>
            <select name="categoria" class="custom-select">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <input type="file" name="Foto" class="mt-4"> <br>
            <button class="btn btn-success mt-3" type="submit">Criar Produto</button>


        </form>


    </div>
</div>