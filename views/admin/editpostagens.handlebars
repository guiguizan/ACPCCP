<div class="card">
    <div class="card-body">
        <h4>Editar Postagens</h4>
        <form action="/admin/postagem/edit" method="POST" enctype="multipart/form-data">
            <input type="hidden" value="{{postagem._id}}" name="id">

            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">slug</label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">

            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">

            <label for="conteudo">Conteúdo</label>
            <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>

            <label for="Preço">Preço</label>
            <input type="text" name="preco" class="form-control" value="{{postagem.preco}}">

            <label for="Preço">Peso</label>
            <input type="text" name="peso" class="form-control" value="{{postagem.peso}}">


            <label for="Preço">Formato</label>
            <input type="text" name="formato" class="form-control" value="{{postagem.formato}}">

            <label for="Preço">Comprimento</label>
            <input type="text" name="comprimento" class="form-control" value="{{postagem.comprimento}}">


            <label for="Preço">altura</label>
            <input type="text" name="altura" class="form-control " value="{{postagem.altura}}">


            <label for="Preço">Largura</label>
            <input type="text" name="largura" class="form-control" value="{{postagem.largura}}">



            <label for="Preço">Diametro</label>
            <input type="text" name="diametro" class="form-control" {{postagem.diametro}}>

            <label for="categoria"></label>
            <select name="categoria" class="custom-select">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <input type="file" name="Foto" class="mt-4"> <br>

            <button class="btn btn-success mt-3" type="submit">Editar Produto</button>
        </form>

    </div>
</div>