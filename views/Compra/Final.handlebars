{{#if products}}

<div class="card">
    <h1>Finalizar Compra : </h1>
    <div class="card-body">
    </div>

    <ul class="list-group">
        {{#each products}}


        <li class="list-group-item d-flex justify-content-between align-items-center">
            <h2> Produto : {{this.item.titulo}}</h2>


            
            <h3>R$: {{this.preco}}</h3>
            <span class="badge badge-primary badge-pill">Quantidade: {{this.qty}}</span>

        </li>

        {{/each}}

    </ul>

</div>


</div>
</div>





<div class="card mt-4">
    <div class="card-body">


        <strong class="ml-4 mt-3">Produtos:{{totalprice}}R$</strong>
        <strong class="ml-4 mt-3">Frete:{{valorF}}R$</strong>
        <strong class="ml-4 mt-3">Total:{{totalR}}R$</strong>

    </div>
</div>
</div>



<div class="card ">
    <div class="card-body">

        <form action="/Pedido" method="POST">
            <input type="hidden" name="frete" value="{{valorF}}">
            <input type="hidden" name="valorFinal" value="{{totalR}}">
            <label for="Endereço">Nome Comprador</label>
            <input type="text" name="nome" class="form-control">
            <label for="Endereço">cpf</label>
            <input type="text" name="cpf" class="form-control">
            <label for="Endereço">cidade</label>
            <input type="text" name="cidade" class="form-control">
            <label for="Endereço">Endereço</label>
            <input type="text" name="end" class="form-control">
            <label for="Numero">Numero</label>
            <input type="text" name="numero" class="form-control">
            <label for="Complemento">Complemento</label>
            <input type="text" name="complemento" class="form-control">
            <label for="Observações">Observações</label>
            <input type="text" name="observacoes" class="form-control">

            <button class="btn btn-success mt-4"> Comprar </button>






        </form>
    </div>
</div>



{{else}}



{{/if}}